if [ -f "/home/brendan/.linuxbrew/opt/bash-git-prompt/share/gitprompt.sh" ]; then
    __GIT_PROMPT_DIR="/home/brendan/.linuxbrew/opt/bash-git-prompt/share"
    source "/home/brendan/.linuxbrew/opt/bash-git-prompt/share/gitprompt.sh"
fi

if [ -f "/usr/local/bin/kubectl" ]; then
  source <(kubectl completion bash)
fi

if [ -f "/usr/local/bin/minikube" ]; then
  source <(minikube completion bash)
fi

export GOPATH=~/go
export PATH="${HOME}/.linuxbrew/bin:${PATH}"
export PATH="${PATH}:${GOPATH}/bin"
export PATH="${PATH}:${HOME}/.cargo/bin"

export EDITOR=vi

eval "$(direnv hook bash)"
